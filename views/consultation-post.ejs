<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>问题详情 - 肇中2025</title>
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/lib/fontawesome/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/treehole-style.css">
    <link rel="stylesheet" href="/css/image-grid.css">
    <style>
        .btn-consultation-sm {
            background: #eff6ff;
            color: #2563eb;
            border: none;
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.875rem;
            font-weight: 600;
        }

        .btn-consultation-sm:hover {
            background: #dbeafe;
        }

        .btn-write-answer {
            background: linear-gradient(135deg, #3b82f6, #2563eb);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 9999px;
            font-weight: 700;
            box-shadow: 0 4px 14px rgba(37, 99, 235, 0.25);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-write-answer:hover {
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 6px 20px rgba(37, 99, 235, 0.3);
        }

        .post-detail-card {
            padding: 1.5rem;
        }

        .answer-card {
            padding: 1.5rem;
            margin-bottom: 1rem;
            transition: box-shadow 0.2s;
        }

        .answer-card:hover {
            box-shadow: var(--shadow-lg);
        }

        .answer-author {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .answer-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #eff6ff;
            color: #3b82f6;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
        }

        .answer-meta {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .answer-content {
            margin-top: 1rem;
            line-height: 1.8;
            font-size: 1rem;
            color: #1f2937;
        }

        .answer-actions {
            margin-top: 1rem;
            padding-top: 0.75rem;
            border-top: 1px solid #f1f5f9;
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .answer-actions .action-btn {
            background: none;
            border: none;
            color: #64748b;
            font-size: 0.875rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0;
        }

        .answer-actions .action-btn:hover {
            color: #3b82f6;
        }

        .answer-actions .action-btn.liked {
            color: #ef4444;
        }

        /* Blue triangle upvote button for answers */
        .answer-upvote-btn {
            background: #eff6ff;
            color: #2563eb;
            border: 1px solid #bfdbfe;
            padding: 0.35rem 0.85rem;
            border-radius: 4px;
            font-size: 0.875rem;
            font-weight: 600;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            transition: all 0.2s;
        }

        .answer-upvote-btn:hover {
            background: #dbeafe;
            border-color: #93c5fd;
        }

        .answer-upvote-btn.upvoted {
            background: #2563eb;
            color: white;
            border-color: #2563eb;
        }

        .answer-upvote-btn .upvote-icon {
            font-size: 0.75rem;
        }

        .write-answer-section {
            text-align: center;
            padding: 2rem;
            background: #f8fafc;
            border-radius: 1rem;
            margin-top: 1.5rem;
        }

        /* Edit and Comment buttons */
        .answer-action-btn {
            background: none;
            border: none;
            color: #64748b;
            font-size: 0.875rem;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            text-decoration: none;
            transition: all 0.2s;
        }

        .answer-action-btn:hover {
            background: #f1f5f9;
            color: #3b82f6;
        }

        .edited-badge {
            font-size: 0.75rem;
            color: #9ca3af;
            font-style: italic;
        }

        /* Comment Section */
        .answer-comments-section {
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px dashed #e2e8f0;
        }

        .comments-list {
            max-height: 300px;
            overflow-y: auto;
        }

        .comment-item {
            padding: 0.75rem;
            background: #f8fafc;
            border-radius: 0.5rem;
            margin-bottom: 0.5rem;
        }

        .comment-header {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.25rem;
            font-size: 0.8rem;
        }

        .comment-author {
            font-weight: 600;
            color: #374151;
        }

        .comment-time {
            color: #9ca3af;
            font-size: 0.75rem;
        }

        .comment-content {
            font-size: 0.9rem;
            color: #4b5563;
            line-height: 1.5;
        }

        .comment-form {
            display: flex;
            gap: 0.5rem;
            margin-top: 0.75rem;
        }

        .comment-input {
            flex: 1;
            padding: 0.5rem 0.75rem;
            border: 1px solid #e2e8f0;
            border-radius: 0.5rem;
            font-size: 0.875rem;
            outline: none;
        }

        .comment-input:focus {
            border-color: #3b82f6;
        }

        .comment-submit-btn {
            background: #3b82f6;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            font-size: 0.875rem;
            cursor: pointer;
        }

        .comment-submit-btn:hover {
            background: #2563eb;
        }

        .comment-options {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-top: 0.5rem;
        }

        .no-comments {
            text-align: center;
            color: #9ca3af;
            font-size: 0.875rem;
            padding: 1rem;
        }

        @media (max-width: 576px) {
            .answer-actions {
                gap: 0.75rem;
            }

            .answer-upvote-btn {
                padding: 0.25rem 0.5rem;
                font-size: 0.8rem;
            }

            .answer-action-btn {
                gap: 0.25rem;
                font-size: 0.8rem;
            }
        }
    </style>
</head>

<body>
    <nav class="warm-nav">
        <div class="container">
            <a href="/consultation" class="btn-warm-outline">
                <i class="fas fa-arrow-left"></i>
                <span>返回咨询专区</span>
            </a>
            <div class="nav-brand">
                <span class="nav-brand-text">问题详情</span>
            </div>
            <% if (user) { %>
                <div class="dropdown">
                    <button class="btn-warm-outline dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user"></i>
                        <span class="d-none d-sm-inline">
                            <%= user.username %>
                        </span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <span class="dropdown-item-text text-muted small">
                                <%= user.campus %> · <%= user.school_type %> · <%= user.graduation_year %>届<br>
                                            <%= user.class_name %>
                            </span>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a class="dropdown-item" href="/profile">
                                <i class="fas fa-id-card me-2"></i>个人主页
                            </a>
                        </li>
                        <% if (user.is_admin) { %>
                            <li><a class="dropdown-item" href="/admin"><i class="fas fa-cog text-danger"></i> 管理面板</a>
                            </li>
                            <% } %>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <form action="/logout" method="POST" class="d-inline">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt"></i> 退出登录
                                        </button>
                                    </form>
                                </li>
                    </ul>
                </div>
                <% } else { %>
                    <div style="width: 100px;"></div>
                    <% } %>
        </div>
    </nav>

    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <!-- 问题 -->
                <div class="treehole-card post-detail-card">
                    <div class="post-header d-flex flex-column align-items-start">
                        <% if (post.title) { %>
                            <h2 class="fw-bold text-dark mb-3" style="font-size: 1.5rem;">
                                <%= post.title %>
                            </h2>
                            <% } %>
                                <div class="post-author w-100">
                                    <div class="post-avatar"
                                        style="background: <%= post.is_anonymous ? '#eff6ff' : '#dbeafe' %>; color: <%= post.is_anonymous ? '#93c5fd' : '#1d4ed8' %>;">
                                        <% if (post.is_anonymous) { %>
                                            <i class="fas fa-user-secret"></i>
                                            <% } else { %>
                                                <i class="fas fa-user"></i>
                                                <% } %>
                                    </div>
                                    <div class="post-author-info">
                                        <div class="post-author-name d-flex align-items-center gap-2">
                                            <% if (post.is_anonymous) { %>
                                                <span class="text-muted">
                                                    <%= post.anonymousName || '匿名用户' %>
                                                </span>
                                                <% } else { %>
                                                    <%= post.username %>
                                                        <% } %>

                                                            <% if (post.displayIdentity) { %>
                                                                <span class="badge bg-info bg-opacity-10 text-info"
                                                                    style="font-size: 0.75rem; font-weight: normal;">
                                                                    <%= post.displayIdentity %>
                                                                </span>
                                                                <% } %>
                                        </div>
                                        <span class="post-time">
                                            <%= moment(post.created_at).format('YYYY-MM-DD HH:mm') %>
                                        </span>
                                    </div>
                                </div>
                    </div>

                    <div class="post-content"
                        style="white-space: pre-wrap; margin-top: 0.5rem; padding-bottom: 0.25rem; font-size: 1.15rem; line-height: 1.6;"><%-
                            post.content %></div>

                    <% if (post.image) { %>
                        <div class="mt-2">
                            <% let images=[]; try { if (post.image && post.image.trim().startsWith('[')) {
                                images=JSON.parse(post.image); } else { images=[post.image]; } } catch (e) {
                                images=[post.image]; } %>
                                <div class="image-grid" data-count="<%= images.length %>">
                                    <% images.forEach(function(img) { %>
                                        <div class="image-item">
                                            <img src="<%= img %>" alt="帖子图片" onclick="window.open('<%= img %>')">
                                        </div>
                                        <% }); %>
                                </div>
                        </div>
                        <% } %>

                            <div class="post-actions d-flex justify-content-between align-items-center">
                                <div class="action-btns d-flex align-items-center">
                                    <span class="action-btn" style="cursor: default;">
                                        <i class="far fa-comment"></i>
                                        <span>
                                            <%= answers.length %> 个回答
                                        </span>
                                    </span>
                                </div>
                                <div class="action-right">
                                    <button type="button" class="action-btn text-secondary" style="font-size: 0.9rem;"
                                        onclick="if(confirm('确定要举报该内容吗？')){ alert('举报已提交，感谢您的反馈！'); }">
                                        <i class="fas fa-flag"></i> 举报
                                    </button>
                                </div>
                            </div>
                </div>

                <!-- 写回答按钮区域 -->
                <% if (post.type==='question' ) { %>
                    <div class="text-center my-4">
                        <% if (userAnswer) { %>
                            <a href="/consultation/answer/<%= userAnswer.id %>/edit" class="btn-write-answer">
                                <i class="fas fa-edit"></i>
                                <span>编辑回答</span>
                            </a>
                            <% } else { %>
                                <a href="/consultation/answer?question_id=<%= post.id %>" class="btn-write-answer">
                                    <i class="fas fa-pen"></i>
                                    <span>写回答</span>
                                </a>
                                <% } %>
                    </div>
                    <% } %>

                        <!-- 回答区 -->
                        <div class="replies-section">
                            <div class="replies-header">
                                <i class="fas fa-lightbulb" style="color: #f59e0b;"></i>
                                <span>
                                    <%= answers.length %> 个回答
                                </span>
                            </div>

                            <% if (answers.length===0) { %>
                                <div class="treehole-card empty-replies">
                                    <p>暂无回答，来分享你的见解吧~</p>
                                </div>
                                <% } %>

                                    <% answers.forEach(function(answer) { %>
                                        <div class="treehole-card answer-card">
                                            <div class="answer-author">
                                                <div class="answer-avatar">
                                                    <% if (answer.is_anonymous) { %>
                                                        <i class="fas fa-user-secret"></i>
                                                        <% } else { %>
                                                            <i class="fas fa-user"></i>
                                                            <% } %>
                                                </div>
                                                <div>
                                                    <div class="answer-meta">
                                                        <% if (answer.is_anonymous) { %>
                                                            <span class="fw-bold text-muted">
                                                                <%= answer.anonymousName || '匿名用户' %>
                                                            </span>
                                                            <% } else { %>
                                                                <span class="fw-bold">
                                                                    <%= answer.username %>
                                                                </span>
                                                                <% } %>

                                                                    <% if (answer.displayIdentity) { %>
                                                                        <span
                                                                            class="badge bg-info bg-opacity-10 text-info"
                                                                            style="font-size: 0.7rem;">
                                                                            <%= answer.displayIdentity %>
                                                                        </span>
                                                                        <% } %>
                                                                            <% if (answer.user_id===post.user_id) { %>
                                                                                <span
                                                                                    class="badge bg-primary bg-opacity-10 text-primary"
                                                                                    style="font-size: 0.7rem;">提问者</span>
                                                                                <% } %>
                                                    </div>
                                                    <small class="text-muted">
                                                        <%= moment(answer.created_at).format('YYYY-MM-DD HH:mm') %>
                                                    </small>
                                                </div>
                                            </div>

                                            <div class="answer-content">
                                                <%- answer.content.replace(/\n/g, '<br>' ) %>
                                            </div>

                                            <% if (answer.image) { %>
                                                <div class="mt-3">
                                                    <% let answerImages=[]; try { if (answer.image &&
                                                        answer.image.trim().startsWith('[')) {
                                                        answerImages=JSON.parse(answer.image); } else {
                                                        answerImages=[answer.image]; } } catch (e) {
                                                        answerImages=[answer.image]; } %>
                                                        <div class="image-grid" data-count="<%= answerImages.length %>">
                                                            <% answerImages.forEach(function(img) { %>
                                                                <div class="image-item">
                                                                    <img src="<%= img %>" alt="回答图片"
                                                                        onclick="window.open('<%= img %>')">
                                                                </div>
                                                                <% }); %>
                                                        </div>
                                                </div>
                                                <% } %>

                                                    <div class="answer-actions">
                                                        <form action="/consultation/<%= answer.id %>/like" method="POST"
                                                            class="like-form d-inline">
                                                            <button type="submit"
                                                                class="answer-upvote-btn <%= answer.userLiked ? 'upvoted' : '' %>">
                                                                <span class="upvote-icon">▲</span>
                                                                <span>赞同 <span class="count">
                                                                        <%= answer.likes || 0 %>
                                                                    </span></span>
                                                            </button>
                                                        </form>

                                                        <button type="button" class="answer-action-btn"
                                                            onclick="toggleComments(<%= answer.id %>)">
                                                            <i class="far fa-comment"></i>
                                                            <span><%= answer.reply_count ? '评论 ' + answer.reply_count : '评论' %></span>
                                                        </button>

                                                        <% if (user && user.id===answer.user_id) { %>
                                                            <a href="/consultation/answer/<%= answer.id %>/edit"
                                                                class="answer-action-btn">
                                                                <i class="fas fa-edit"></i>
                                                                <span>编辑</span>
                                                            </a>
                                                            <form action="/consultation/answer/<%= answer.id %>/delete"
                                                                method="POST" class="d-inline"
                                                                onsubmit="return confirm('确定要删除这个回答吗？删除后无法恢复。')">
                                                                <button type="submit"
                                                                    class="answer-action-btn text-danger">
                                                                    <i class="fas fa-trash-alt"></i>
                                                                    <span>删除</span>
                                                                </button>
                                                            </form>
                                                            <% } %>

                                                                <% if (answer.updated_at) { %>
                                                                    <span class="edited-badge">已编辑</span>
                                                                    <% } %>
                                                    </div>

                                                    <!-- 评论区 -->
                                                    <div class="answer-comments-section"
                                                        id="comments-section-<%= answer.id %>" style="display: none;">
                                                        <div class="comments-list" id="comments-list-<%= answer.id %>">
                                                            <div class="no-comments">加载评论中...</div>
                                                        </div>
                                                        <div class="comment-form">
                                                            <input type="text" class="comment-input"
                                                                id="comment-input-<%= answer.id %>"
                                                                placeholder="写下你的评论...">
                                                            <button type="button" class="comment-submit-btn"
                                                                onclick="submitComment(<%= answer.id %>)">发送</button>
                                                        </div>
                                                        <div class="comment-options">
                                                            <label class="form-check-label small text-muted">
                                                                <input type="checkbox" class="form-check-input"
                                                                    id="comment-anonymous-<%= answer.id %>">
                                                                匿名评论
                                                            </label>
                                                        </div>
                                                    </div>
                                        </div>
                                        <% }); %>
                        </div>
            </div>
        </div>
    </div>

    <script src="/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle comments section visibility and load comments
        async function toggleComments(answerId) {
            const section = document.getElementById('comments-section-' + answerId);
            if (section.style.display === 'none') {
                section.style.display = 'block';
                await loadComments(answerId);
            } else {
                section.style.display = 'none';
            }
        }

        // Load comments for an answer
        async function loadComments(answerId) {
            const listDiv = document.getElementById('comments-list-' + answerId);
            try {
                const response = await fetch('/api/consultation/answer/' + answerId + '/comments', {
                    headers: { 'Accept': 'application/json' }
                });
                const data = await response.json();

                if (data.success && data.comments) {
                    if (data.comments.length === 0) {
                        listDiv.innerHTML = '<div class="no-comments">暂无评论，快来发表第一条评论吧~</div>';
                    } else {
                        listDiv.innerHTML = data.comments.map(c => renderComment(c)).join('');
                    }
                } else {
                    listDiv.innerHTML = '<div class="no-comments">加载评论失败</div>';
                }
            } catch (err) {
                console.error('加载评论失败:', err);
                listDiv.innerHTML = '<div class="no-comments">加载评论失败</div>';
            }
        }

        // Render a single comment
        function renderComment(comment) {
            const time = new Date(comment.created_at).toLocaleString('zh-CN', {
                month: 'numeric', day: 'numeric', hour: '2-digit', minute: '2-digit'
            });
            const authorName = comment.is_anonymous
                ? '<i class="fas fa-user-secret me-1"></i>' + (comment.anonymousName || '匿名用户')
                : comment.username;
            const identity = comment.displayIdentity
                ? '<span class="badge bg-info bg-opacity-10 text-info ms-1" style="font-size: 0.65rem;">' + comment.displayIdentity + '</span>'
                : '';

            return `
                <div class="comment-item">
                    <div class="comment-header">
                        <span class="comment-author">${authorName}</span>
                        ${identity}
                        <span class="comment-time">${time}</span>
                    </div>
                    <div class="comment-content">${escapeHtml(comment.content)}</div>
                </div>
            `;
        }

        // Escape HTML to prevent XSS
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Submit a comment
        async function submitComment(answerId) {
            const input = document.getElementById('comment-input-' + answerId);
            const anonymousCheckbox = document.getElementById('comment-anonymous-' + answerId);
            const content = input.value.trim();

            if (!content) {
                alert('请输入评论内容');
                return;
            }

            try {
                const formData = new FormData();
                formData.append('content', content);
                if (anonymousCheckbox.checked) {
                    formData.append('anonymous', 'on');
                }

                const response = await fetch('/consultation/answer/' + answerId + '/comment', {
                    method: 'POST',
                    headers: {
                        'Accept': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: new URLSearchParams(formData)
                });

                const data = await response.json();

                if (data.success) {
                    input.value = '';
                    anonymousCheckbox.checked = false;
                    // Reload comments to show the new one
                    await loadComments(answerId);
                } else {
                    alert(data.error || '评论失败');
                }
            } catch (err) {
                console.error('评论失败:', err);
                alert('评论失败，请稍后重试');
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.like-form').forEach(form => {
                form.addEventListener('submit', async function (e) {
                    e.preventDefault();
                    const btn = this.querySelector('button');
                    const countSpan = btn.querySelector('.count');

                    try {
                        const response = await fetch(this.action, {
                            method: 'POST',
                            headers: {
                                'Accept': 'application/json',
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        });
                        const data = await response.json();

                        if (data.success) {
                            // Handle both old style (liked) and new style (upvoted) buttons
                            if (data.liked) {
                                btn.classList.add('liked');
                                btn.classList.add('upvoted');
                            } else {
                                btn.classList.remove('liked');
                                btn.classList.remove('upvoted');
                            }
                            if (countSpan) countSpan.textContent = data.count;
                        }
                    } catch (err) {
                        console.error('点赞失败', err);
                    }
                });
            });

            // Allow Enter key to submit comments
            document.querySelectorAll('.comment-input').forEach(input => {
                input.addEventListener('keypress', function (e) {
                    if (e.key === 'Enter') {
                        const answerId = this.id.replace('comment-input-', '');
                        submitComment(answerId);
                    }
                });
            });
        });
    </script>
</body>

</html>