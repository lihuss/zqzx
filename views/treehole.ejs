            qDt.items.clear();
            updateQuickPreview();
        }

        function handleQuickFileSelect(input) {
            const files = input.files;
            for (let i = 0; i < files.length; i++) {
                if (qDt.files.length < 9) qDt.items.add(files[i]);
            }
            input.files = qDt.files;
            updateQuickPreview();
        }

        function updateQuickPreview() {
            const preview = document.getElementById('quick-upload-preview');
            preview.innerHTML = '';
            Array.from(qDt.files).forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = (e) => {
                    const div = document.createElement('div');
                    div.className = 'position-relative';
                    div.style.width = '60px';
                    div.style.height = '60px';
                    div.innerHTML = `
                        <img src="${e.target.result}" style="width:100%;height:100%;object-fit:cover;border-radius:4px;">
                        <button type="button" class="btn btn-danger btn-sm p-0 position-absolute" 
                            style="top:-5px;right:-5px;width:18px;height:18px;border-radius:50%;font-size:10px;"
                            onclick="removeQuickFile(${index})">Ã—</button>
                    `;
                    preview.appendChild(div);
                };
                reader.readAsDataURL(file);
            });
        }

        function removeQuickFile(index) {
            const newDt = new DataTransfer();
            Array.from(qDt.files).forEach((file, i) => {
                if (i !== index) newDt.items.add(file);
            });
            qDt.items.clear();
            Array.from(newDt.files).forEach(file => qDt.items.add(file));
            document.getElementById('quickImageInput').files = qDt.files;
            updateQuickPreview();
        }

        // é˜»æ­¢é»˜è®¤è¡Œä¸ºï¼ˆç”¨äºé˜²æ­¢ç‚¹å‡»å†…éƒ¨æŒ‰é’®æ—¶è§¦å‘å¤–å±‚é“¾æ¥è·³è½¬ï¼‰
        function stopProp(e) {
            e.preventDefault();
            e.stopPropagation();
        }

        // æ ‘æ´äº¤äº’åŠŸèƒ½ï¼šç‚¹èµ/ç‚¹è¸©
        async function toggleReaction(btn, type, messageId, event) {
            if (event) {
                event.preventDefault();
                event.stopPropagation();
            }

            try {
                const response = await fetch('/treehole/' + messageId + '/react', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ type: type })
                });
                const data = await response.json();

                if (data.success) {
                    const container = btn.closest('.action-btns');
                    const likeBtn = container.children[0];
                    const dislikeBtn = container.children[1];

                    // æ›´æ–°è®¡æ•°
                    likeBtn.querySelector('.count').textContent = data.likes;
                    dislikeBtn.querySelector('.count').textContent = data.dislikes;

                    // æ›´æ–°æ ·å¼çŠ¶æ€
                    likeBtn.classList.remove('liked');
                    likeBtn.querySelector('i').classList.replace('fas', 'far');
                    dislikeBtn.classList.remove('disliked');
                    dislikeBtn.querySelector('i').classList.replace('fas', 'far');

                    if (data.userAction === 'like') {
                        likeBtn.classList.add('liked');
                        likeBtn.querySelector('i').classList.replace('far', 'fas');
                    } else if (data.userAction === 'dislike') {
                        dislikeBtn.classList.add('disliked');
                        dislikeBtn.querySelector('i').classList.replace('far', 'fas');
                    }

                    // åŠ¨ç”»æ•ˆæœ
                    btn.style.transform = 'scale(1.2)';
                    setTimeout(() => { btn.style.transform = ''; }, 200);
                } else {
                    alert(data.error || 'æ“ä½œå¤±è´¥');
                }
            } catch (err) {
                console.error('äº¤äº’å¤±è´¥:', err);
            }
        }

        // å¤åˆ¶ID
        function copyId(id, event) {
            if (event) {
                event.preventDefault();
                event.stopPropagation();
            }
            const text = '#' + id;
            if (navigator.clipboard) {
                navigator.clipboard.writeText(text).then(() => {
                    alert('å·²å¤åˆ¶: ' + text);
                }).catch(() => {
                    prompt('è¯·æ‰‹åŠ¨å¤åˆ¶:', text);
                });
            } else {
                prompt('è¯·æ‰‹åŠ¨å¤åˆ¶:', text);
