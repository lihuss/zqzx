                    }
                } catch (err) {
                    console.error(err);
                    alert('ç½‘ç»œé”™è¯¯');
                }
            }
        }

        // è§£å†³ä¸‹æ‹‰èœå•è¢«é®æŒ¡é—®é¢˜ï¼šå½“èœå•æ‰“å¼€æ—¶æé«˜å¡ç‰‡å±‚çº§
        document.addEventListener('show.bs.dropdown', function (e) {
