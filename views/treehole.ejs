    <script>
        // å¿«é€Ÿå‘å¸–äº¤äº’
        const publishCard = document.getElementById('mainPublishCard');
        const qDt = new DataTransfer();

        function expandPublish() {
            publishCard.classList.add('active');
            publishCard.querySelector('textarea').focus();
        }

        function collapsePublish() {
            if (publishCard.querySelector('textarea').value.trim() !== '') {
                if (!confirm('ç¡®å®šæ”¾å¼ƒæ­£åœ¨ç¼–è¾‘çš„å†…å®¹å—ï¼Ÿ')) return;
            }
