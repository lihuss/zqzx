<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>个人主页 - 东湖畔</title>
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/lib/fontawesome/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #f59e0b;
            --cork: #d97706;
            --warm-bg: #fcfaf7;
            --text-primary: #1e293b;
            --text-secondary: #64748b;
        }

        body {
            font-family: "Noto Sans SC", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            background-color: var(--warm-bg);
            color: var(--text-primary);
            padding-top: 70px;
        }

        .warm-nav {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 60px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(241, 245, 249, 0.8);
            z-index: 1030;
            display: flex;
            align-items: center;
        }

        .nav-brand {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            text-decoration: none;
            color: var(--text-primary);
            font-weight: 700;
            font-size: 1.1rem;
        }

        .btn-warm {
            background: linear-gradient(135deg, var(--primary), var(--cork));
            color: white;
            border: none;
            padding: 0.5rem 1.25rem;
            border-radius: 0.5rem;
            font-weight: 600;
        }

        /* 邀请码样式 */
        .code-card {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
            border-radius: 0.75rem;
            color: white;
            padding: 1rem;
            margin-bottom: 0.75rem;
            position: relative;
            overflow: hidden;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .code-card::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.15) 0%, transparent 70%);
        }

        .code-card.used {
            background: linear-gradient(135deg, #94a3b8 0%, #64748b 100%);
            opacity: 0.8;
        }

        .invite-code {
            font-family: 'Courier New', monospace;
            font-size: 1.2rem;
            letter-spacing: 2px;
            font-weight: bold;
        }

        .copy-btn {
            background: rgba(255, 255, 255, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.3);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
        }

        .copy-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            color: white;
        }
    </style>
</head>

<body>
    <nav class="warm-nav">
        <div class="container d-flex justify-content-between align-items-center">
            <a href="/" class="nav-brand">
                <i class="fas fa-graduation-cap text-warning"></i>
                <span class="nav-brand-text">东湖畔 ZhaoHub</span>
            </a>
            <a href="javascript:history.back()" class="btn btn-outline-secondary btn-sm">返回</a>
        </div>
    </nav>

    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body p-4">
                        <div class="text-center mb-4">
                            <div class="rounded-circle bg-warning bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-3"
                                style="width: 80px; height: 80px;">
                                <i class="fas fa-user fa-2x text-warning"></i>
                            </div>
                            <h3 class="fw-bold">
                                <%= user.username %>
                            </h3>
                        </div>

                        <div class="list-group list-group-flush mb-4 rounded-3">
                            <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <span class="text-muted">身份</span>
                                <span class="fw-medium">
                                    <%= user.school_type %>生
                                </span>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <span class="text-muted">校区</span>
                                <span class="fw-medium">
                                    <%= user.campus %>
                                </span>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <span class="text-muted">年级</span>
                                <span class="fw-medium">
                                    <%= user.graduation_year %>届 <%= user.class_name %>
                                </span>
                            </div>
                        </div>

                        <% if (user.isCollegeStudent) { %>
                            <div class="bg-primary bg-opacity-10 p-4 rounded-3 mb-4">
                                <div class="d-flex align-items-center mb-3">
                                    <i class="fas fa-university text-primary me-2"></i>
                                    <h5 class="mb-0 text-primary fw-bold">大学生认证</h5>
                                </div>
                                <p class="small text-muted mb-3">
                                    您已从母校毕业，欢迎认证您的大学信息。
                                    <br>认证后，在咨询区回复贴子时将展示您的大学名称，为学弟学妹提供参考。
                                </p>
                                <form action="/profile/update" method="POST">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="university" name="university"
                                            placeholder="请输入您的大学名称" value="<%= user.university || '' %>">
                                        <label for="university">就读大学（如：北京大学）</label>
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100">
                                        Update / 更新信息
                                    </button>
                                </form>
                            </div>
                            <% } %>

                                <!-- 邀请码区域 -->
                                <div class="card bg-light border-0 rounded-3 mb-4">
                                    <div class="card-body p-3">
                                        <div class="d-flex align-items-center mb-3">
                                            <i class="fas fa-gift text-warning me-2"></i>
                                            <h5 class="mb-0 fw-bold text-dark">我的邀请码</h5>
                                        </div>

                                        <% if (codes && codes.length> 0) { %>
                                            <% codes.forEach((code, index)=> { %>
                                                <div class="code-card <%= code.used_by ? 'used' : '' %>">
                                                    <div>
                                                        <div class="small opacity-75 mb-1">Code #<%= index + 1 %>
                                                        </div>
                                                        <div class="invite-code">
                                                            <%= code.code %>
                                                        </div>
                                                    </div>

                                                    <% if (code.used_by) { %>
                                                        <div class="text-end small">
                                                            <span
                                                                class="badge bg-white text-secondary bg-opacity-25">已使用</span>
                                                            <div class="mt-1 opacity-75" style="font-size: 0.75rem;">
                                                                By <%= code.used_by_username %>
                                                            </div>
                                                        </div>
                                                        <% } else { %>
                                                            <button class="copy-btn"
                                                                onclick="copyCode('<%= code.code %>')">
                                                                <i class="fas fa-copy me-1"></i>复制
                                                            </button>
                                                            <% } %>
                                                </div>
                                                <% }); %>
                                                    <div class="text-center text-muted small mt-2">
                                                        <i class="fas fa-info-circle me-1"></i>
                                                        剩余可用：<%= codes.filter(c=> !c.used_by).length %> 个
                                                    </div>
                                                    <% } else { %>
                                                        <div class="text-center text-muted py-3">暂无邀请码</div>
                                                        <% } %>
                                    </div>
                                </div>

                                <div class="d-grid">
                                    <form action="/logout" method="POST" class="d-grid">
                                        <button type="submit" class="btn btn-outline-danger">退出登录</button>
                                    </form>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script>
        function copyCode(code) {
            // 优先尝试现代 API
            if (navigator.clipboard) {
                navigator.clipboard.writeText(code).then(() => {
                    alert('邀请码已复制：' + code);
                }).catch(() => {
                    fallbackCopyTextToClipboard(code);
                });
            } else {
                fallbackCopyTextToClipboard(code);
            }
        }

        function fallbackCopyTextToClipboard(text) {
            var textArea = document.createElement("textarea");
            textArea.value = text;
            textArea.style.position = "fixed";
            document.body.appendChild(textArea);
            textArea.focus();
            textArea.select();
            try {
                var successful = document.execCommand('copy');
                if (successful) {
                    alert('邀请码已复制：' + text);
                } else {
                    prompt('请手动复制：', text);
                }
            } catch (err) {
                prompt('请手动复制：', text);
            }
            document.body.removeChild(textArea);
        }
    </script>
</body>

</html>