<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= currentClass.full_name %> - 回忆录
    </title>
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/lib/fontawesome/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/class-style.css">
    <link rel="stylesheet" href="/css/image-grid.css">
</head>

<body class="class-page">
    <!-- 顶部导航 -->
    <nav class="warm-nav">
        <div class="container">
            <a href="/hall" class="btn-warm-outline">
                <i class="fas fa-arrow-left"></i>
                <span>返回大厅</span>
            </a>
            <div class="nav-brand">
                <div class="nav-brand-icon">
                    <i class="fas fa-book-open"></i>
                </div>
                <span class="nav-brand-text">
                    <%= currentClass.full_name %>
                </span>
            </div>
            <% if (user) { %>
                <div class="dropdown">
                    <button class="btn-warm-outline dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user"></i>
                        <span class="d-none d-sm-inline">
                            <%= user.username %>
                        </span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><span class="dropdown-item-text fw-bold">
                                <%= user.username %>
                            </span></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="/profile"><i
                                    class="fas fa-id-card me-2"></i>个人主页</a></li>
                        <li>
                            <form action="/logout" method="POST">
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="fas fa-sign-out-alt me-2"></i>退出登录
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
                <% } else { %>
                    <span></span>
                    <% } %>
        </div>
    </nav>

    <div class="container py-4">
        <div class="row">
            <!-- 左侧发帖区 -->
            <div class="col-lg-4 col-md-5 mb-4">
                <div class="bulletin-card p-4 post-form-card">
                    <div class="tape-decoration"></div>
                    <div class="post-form-title">
                        <i class="fas fa-pen-fancy"></i>
                        <span>写下回忆</span>
                    </div>
                    <form action="/class/<%= currentClass.id %>/post" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <textarea name="content" class="form-input-warm" rows="5" placeholder="今天发生了什么有趣的事..."
                                required></textarea>
                        </div>
                        <div class="mb-3">
                            <input type="file" name="image" id="imageUpload" accept="image/*" multiple style="display: none;" onchange="handleFileSelect(this)">
                            <div class="d-flex flex-wrap gap-2" id="upload-grid">
                                <!-- Previews -->
                                <div class="upload-btn-wrapper" id="upload-btn-wrapper" onclick="document.getElementById('imageUpload').click()">
                                    <div class="file-upload-box">
                                        <i class="fas fa-camera"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="anon-check-warm">
                            <input type="checkbox" id="anonymous" name="anonymous">
                            <label for="anonymous">
                                <i class="fas fa-user-secret"></i> 匿名发布
                            </label>
                        </div>
                        <button type="submit" class="btn-warm w-100 mt-3">
                            <i class="fas fa-paper-plane"></i>
                            <span>发布</span>
                        </button>
                    </form>
                    <div class="info-tip">
                        <i class="fas fa-info-circle"></i>
                        <span>评论区采用匿名ID，畅所欲言</span>
                    </div>
                </div>
            </div>

            <!-- 右侧帖子流 -->
            <div class="col-lg-8 col-md-7">
                <% if (posts.length===0) { %>
                    <div class="bulletin-card empty-state">
                        <i class="fas fa-inbox"></i>
                        <h5>还没有帖子</h5>
                        <p>快来写下第一条回忆吧！</p>
                    </div>
                    <% } %>

                        <% var randomNames=['Alex', 'Blake' , 'Casey' , 'Drew' , 'Eden' , 'Finn' , 'Gray' , 'Harper'
                            , 'Ivy' , 'Jordan' , 'Kelly' , 'Logan' , 'Morgan' , 'Noah' , 'Ocean' , 'Parker' , 'Quinn'
                            , 'Riley' , 'Sage' , 'Taylor' , 'Sky' , 'Avery' , 'Charlie' , 'Dakota' , 'Phoenix' , 'River'
                            , 'Storm' , 'Winter' , 'Ash' , 'Blue' ]; function getShuffledNames(postId) { var seed=postId
                            * 31; var shuffled=randomNames.slice(); for (var i=shuffled.length - 1; i> 0; i--) {
                            var j = (seed * (i + 1) * 17) % (i + 1);
                            var temp = shuffled[i];
                            shuffled[i] = shuffled[j];
                            shuffled[j] = temp;
                            }
                            return shuffled;
                            }
                            %>

                            <% posts.forEach(function(post, index) { var namesForPost=getShuffledNames(post.id); var
                                userIdMap={}; var idCounter=0; function getAnonName(userId) { if (!userId)
                                return 'Anonymous' ; if (!userIdMap[userId]) { userIdMap[userId]=namesForPost[idCounter
                                % namesForPost.length]; idCounter++; } return userIdMap[userId]; } var
                                posterUserId=post.user_id; var isAnonymousPost=post.is_anonymous; var
                                pinColors=['', 'pin-blue' , 'pin-green' ]; var pinColor=pinColors[index % 3]; %>
                                <div class="bulletin-card post-card">
                                    <div class="pin-decoration <%= pinColor %>"></div>

                                    <!-- 帖子头部 -->
                                    <div class="post-header">
                                        <div class="post-author">
                                            <div class="post-avatar <%= isAnonymousPost ? 'anon-avatar' : '' %>">
                                                <%= isAnonymousPost ? '匿' : (post.author_name ?
                                                    post.author_name.charAt(0).toUpperCase() : '?' ) %>
                                            </div>
                                            <div class="post-author-info">
                                                <div class="post-author-name">
                                                    <span>
                                                        <%= isAnonymousPost ? '匿名用户' : (post.author_name || '未知用户' ) %>
                                                    </span>
                                                    <% if (!isAnonymousPost && post.author_name) { %><span
                                                            class="badge-op">楼主</span>
                                                        <% } %>
                                                </div>
                                                <span class="post-time">
                                                    <%= moment(post.created_at).format('MM-DD HH:mm') %>
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- 帖子内容 -->
                                    <div class="post-content">
                                        <p><%- post.content.replace(/\n/g, '<br>' ) %></p>
                                    </div>

                                    <% if (post.image) { %>
                                        <div class="mt-2">
                                            <% 
                                                let images = [];
                                                try {
                                                    if (post.image && post.image.trim().startsWith('[')) {
                                                        images = JSON.parse(post.image);
                                                    } else {
                                                        images = [post.image];
                                                    }
                                                } catch (e) { images = [post.image]; }
                                            %>
                                            <div class="image-grid" data-count="<%= images.length %>">
                                                <% images.forEach(function(img) { %>
                                                    <div class="image-item">
                                                        <img src="<%= img %>" alt="帖子图片"  onclick="openImage(this.src)">
                                                    </div>
                                                <% }); %>
                                            </div>
                                        </div>
                                        <% } %>

                                            <!-- 操作栏 -->
                                            <div class="post-actions">
                                                <div class="action-btns">
                                                    <button type="button"
                                                        class="action-btn <%= post.userLiked ? 'liked' : '' %>"
                                                        data-post-id="<%= post.id %>" onclick="toggleLike(this)">
                                                        <i class="<%= post.userLiked ? 'fas' : 'far' %> fa-heart"></i>
                                                        <span class="like-count">
                                                            <%= post.likes %>
                                                        </span>
                                                    </button>
                                                    <span class="action-btn" style="cursor: default;">
                                                        <i class="far fa-comment"></i>
                                                        <span>
                                                            <%= post.comments.length %>
                                                        </span>
                                                    </span>
                                                </div>
                                                <form action="/post/<%= post.id %>/report" method="POST"
                                                    class="d-inline">
                                                    <button type="submit" class="action-btn report-btn">
                                                        <i class="fas fa-flag"></i>
                                                        <span>举报</span>
                                                    </button>
                                                </form>
                                            </div>

                                            <!-- 评论区 -->
                                            <% if (post.comments.length> 0) { %>
                                                <div class="comments-section">
                                                    <div class="comments-header">
                                                        <i class="fas fa-comments"></i>
                                                        <span>评论 (<%= post.comments.length %>)</span>
                                                    </div>
                                                    <% post.comments.forEach(function(c) { var isOP=c.user_id &&
                                                        c.user_id===posterUserId; var displayName=isOP ? '楼主' :
                                                        getAnonName(c.user_id); %>
                                                        <div class="comment-item">
                                                            <span
                                                                class="comment-badge <%= isOP ? 'badge-op' : 'badge-commenter' %>">
                                                                <%= displayName %>
                                                            </span>
                                                            <span class="comment-text">
                                                                <%= c.content %>
                                                            </span>
                                                        </div>
                                                        <% }); %>
                                                </div>
                                                <% } %>

                                                    <!-- 评论输入框 -->
                                                    <form action="/post/<%= post.id %>/comment" method="POST"
                                                        class="comment-form">
                                                        <input type="text" name="commentContent" class="comment-input"
                                                            placeholder="写下你的评论..." required>
                                                        <button class="comment-submit" type="submit">
                                                            <i class="fas fa-paper-plane"></i>
                                                        </button>
                                                    </form>
                                </div>
                                <% }); %>
            </div>
        </div>
    </div>

    <script src="/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <style>
        .file-upload-box {
            width: 60px;
            height: 60px;
            border: 2px dashed #cbd5e1;
            border-radius: 0.5rem;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            color: #64748b;
            background-color: #f8fafc;
        }
        .file-upload-box:hover {
            border-color: #f59e0b;
            color: #f59e0b;
        }
        .preview-item img {
            width: 60px;
            height: 60px;
            object-fit: cover;
        }
    </style>
    <script>
        // 在新窗口打开适应屏幕的图片
        function openImage(src) {
            var newWin = window.open("", "_blank");
            if (newWin) {
                newWin.document.write('<!DOCTYPE html><html style="height:100%; margin:0;"><head><meta charset="UTF-8"><meta name="viewport" content="width=device-width, initial-scale=1.0"><title>图片查看</title><style>body{margin:0;padding:0;height:100vh;background:#000;display:flex;justify-content:center;align-items:center;}img{max-width:100%;max-height:100%;object-fit:contain;}</style></head><body><img src="' + src + '" alt="图片"></body></html>');
                newWin.document.close();
            } else {
                window.location.href = src;
            }
        }

        async function toggleLike(btn) {
            var postId = btn.dataset.postId;
            try {
                var response = await fetch('/post/' + postId + '/like', {
                    method: 'POST',
                    headers: { 'Accept': 'application/json', 'Content-Type': 'application/json' }
                });
                var data = await response.json();
                if (data.success) {
                    var icon = btn.querySelector('i');
                    var count = btn.querySelector('.like-count');
                    if (data.liked) {
                        btn.classList.add('liked');
                        icon.classList.remove('far');
                        icon.classList.add('fas');
        const dt = new DataTransfer();

        function handleFileSelect(input) {
            const files = input.files;
            
            for (let i = 0; i < files.length; i++) {
                let exists = false;
                for(let j = 0; j < dt.files.length; j++) {
                    if (dt.files[j].name === files[i].name && dt.files[j].size === files[i].size) {
                        exists = true;
                        break;
                    }
                }
                if (!exists) {
                    dt.items.add(files[i]);
                }
            }

            if (dt.files.length > 9) {
                alert('最多只能上传 9 张图片，已保留前 9 张');
                const newDt = new DataTransfer();
                for (let i = 0; i < 9; i++) {
                    newDt.items.add(dt.files[i]);
                }
                dt.items.clear();
                for (let i = 0; i < newDt.files.length; i++) {
                    dt.items.add(newDt.files[i]);
                }
            }

            input.files = dt.files;

            updatePreview();
        }

        function updatePreview() {
            const grid = document.getElementById('upload-grid');
            const btnWrapper = document.getElementById('upload-btn-wrapper');
            
            const previews = grid.querySelectorAll('.preview-item');
            previews.forEach(el => el.remove());

            Array.from(dt.files).forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const div = document.createElement('div');
                    div.className = 'preview-item position-relative';
                    
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.className = 'border rounded';
                    
                    const btn = document.createElement('button');
                    btn.type = 'button';
                    btn.className = 'btn btn-danger btn-sm position-absolute top-0 end-0 p-0 d-flex justify-content-center align-items-center';
                    btn.style.width = '16px';
                    btn.style.height = '16px';
                    btn.style.fontSize = '10px';
                    btn.style.transform = 'translate(30%, -30%)';
                    btn.style.borderRadius = '50%';
                    btn.innerHTML = '&times;';
                    btn.onclick = function(ev) {
                        ev.stopPropagation(); 
                        removeFile(index);
                    };

                    div.appendChild(img);
                    div.appendChild(btn);
                    grid.insertBefore(div, btnWrapper);
                }
                reader.readAsDataURL(file);
            });

            if (dt.files.length >= 9) {
                btnWrapper.style.display = 'none';
            } else {
                btnWrapper.style.display = 'block';
            }
        }

        function removeFile(index) {
            const newDt = new DataTransfer();
            for (let i = 0; i < dt.files.length; i++) {
                if (i !== index) {
                    newDt.items.add(dt.files[i]);
                }
            }
            dt.items.clear();
            for (let i = 0; i < newDt.files.length; i++) {
                dt.items.add(newDt.files[i]);
            }
            
            document.getElementById('imageUpload').files = dt.files;
            updatePreview();
        }         }
                    count.textContent = data.count;
                    btn.style.transform = 'scale(1.2)';
                    setTimeout(function () { btn.style.transform = ''; }, 200);
                }
            } catch (err) {
                console.error('点赞失败:', err);
            }
        }

        // 显示选中的文件名
        document.getElementById('imageUpload').addEventListener('change', function (e) {
            var fileName = e.target.files[0] ? e.target.files[0].name : '上传照片 (可选)';
            this.nextElementSibling.querySelector('span').textContent = fileName;
        });
    </script>
</body>

</html>